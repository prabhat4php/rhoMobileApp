<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Employee</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @employee.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="employee[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Company: </td>
                <td class="itemValue"><input type="text" name="employee[company]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Address: </td>
                <td class="itemValue"><input type="text" name="employee[address]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Age: </td>
                <td class="itemValue"><input type="text" name="employee[age]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Gender: </td>
                <td class="itemValue"><input type="text" name="employee[gender]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Salary: </td>
                <td class="itemValue"><input type="text" name="employee[salary]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
