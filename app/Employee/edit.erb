<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @employee.name %></h1>
    <a href="<%= url_for :action => :show, :id => @employee.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @employee.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @employee.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="employee[name]" class="fieldLabel">Name</label>
            <input type="text" id="employee[name]" name="employee[name]" value="<%= @employee.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[company]" class="fieldLabel">Company</label>
            <ul>
              <li>
                <select name="employee[company_id]">
                  <% @companies.each do |company|%>
                  <option value="<%= company.object%>" <%= "selected" if company.object == @employee.company_id%>>
                    <%=company.name %>
                  </option>
                  <%end%>
                </select>

              </li>
              </ul>
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[address]" class="fieldLabel">Address</label>
            <input type="textarea" rows="5" cols="30" id="employee[address]" name="employee[address]" value="<%= @employee.address %>" <%= placeholder( "Address" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[age]" class="fieldLabel">Age</label>
            <input type="text" id="employee[age]" name="employee[age]" value="<%= @employee.age %>" <%= placeholder( "Age" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[gender]" class="fieldLabel">Gender</label>
            <input type="text" id="employee[gender]" name="employee[gender]" value="<%= @employee.gender %>" <%= placeholder( "Gender" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[salary]" class="fieldLabel">Salary</label>
            <input type="text" id="employee[salary]" name="employee[salary]" value="<%= @employee.salary %>" <%= placeholder( "Salary" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
