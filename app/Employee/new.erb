<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @employee.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @employee.object %>"/>
          <div data-role="fieldcontain">
            <label for="employee[name]" class="fieldLabel">Name</label>
            <input type="text" id="employee[name]" name="employee[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[company]" class="fieldLabel">Company</label>
            <ul>
              <li>
                <select name="employee[company_id]">
                  <% @companies.each do |company|%>
                  <option value="<%= company.object%>" <%= "selected" if company.object == @employee.company_id%>>
                    <%=company.name %>
                  </option>
                  <%end%>
                </select>

              </li>
              </ul>
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[address]" class="fieldLabel">Address</label>
            <input type="textarea" rows="5" cols="30" id="employee[address]" name="employee[address]" <%= placeholder("Address") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[age]" class="fieldLabel">Age</label>
            <input type="text" id="employee[age]" name="employee[age]" <%= placeholder("Age") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[gender]" class="fieldLabel">Gender</label>
            <ul>
              <li>
                <label for="employee[gender]">Male</label> <input type="radio" name="employee[gender]" value="male"/>
              </li>
              <li>
                <label for="task[status]">Female</label><input type="radio" name="employee[gender]" value="female"/>
              </li>
            </ul>

          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[salary]" class="fieldLabel">Salary</label>
            <input type="text" id="employee[salary]" name="employee[salary]" <%= placeholder("Salary") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
